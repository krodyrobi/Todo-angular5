{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./src/",
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],
      "@core": ["app/_core"],
      "@core/*": ["app/_core/*"],
      "@shared": ["app/_shared"],
      "@shared/*": ["app/_shared/*"]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
